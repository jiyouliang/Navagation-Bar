<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:maxWidth="220dp"
    android:paddingLeft="10dp"
    android:paddingTop="@dimen/padding_size"
    android:paddingBottom="@dimen/padding_size"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/iv_hot_prod"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/hot_buy_item1"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_hot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="title"
        android:textColor="@color/hotBuyTitle"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/iv_hot_prod"
        app:layout_constraintTop_toTopOf="@id/iv_hot_prod" />

    <TextView
        android:id="@+id/tv_hot_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="亦蔬亦果，口口爆汁清甜；番茄红素含量高，低热量，营养健康；尤其适合制作健身餐"
        android:textColor="@color/hotBuySubTitle"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@id/iv_hot_prod"
        app:layout_constraintTop_toBottomOf="@id/tv_hot_title" />

    <TextView
        android:id="@+id/tv_hot_attr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="attr1"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_hot_prod"
        app:layout_constraintTop_toBottomOf="@id/tv_hot_subtitle" />

    <TextView
        android:id="@+id/tv_hot_subattr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="subattr1"
        android:textSize="9sp"
        app:layout_constraintLeft_toRightOf="@id/iv_hot_prod"
        app:layout_constraintTop_toBottomOf="@id/tv_hot_attr1" />

    <TextView
        android:id="@+id/tv_hot_attr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="味道鲜美"
        android:textSize="11sp"
        android:textStyle="bold"

        app:layout_constraintBaseline_toBaselineOf="@id/tv_hot_attr1"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_hot_subattr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLength="2"
        android:singleLine="true"
        android:layout_marginEnd="20dp"
        android:text="皮薄无渣"
        app:layout_constraintLeft_toLeftOf="@id/tv_hot_attr2"
        android:textSize="9sp"
        app:layout_constraintTop_toBottomOf="@id/tv_hot_attr2" />

    <TextView
        android:id="@+id/tv_hot_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="¥ 39.90 /盒"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/iv_hot_prod"
        app:layout_constraintTop_toBottomOf="@id/tv_hot_subattr1" />


    <ImageView
        android:id="@+id/iv_add_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/cart_btn_add"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/tv_hot_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_hot_price" />

</android.support.constraint.ConstraintLayout>